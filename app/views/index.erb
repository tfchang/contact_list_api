<button id="list-contacts" type="button">List All Contacts</button>

<button id="add-contact" type="button">Add New Contact</button>

<table id="contacts" class="hide">
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
    </tr>
  </thead>
  <tbody>
  </tbody>
</table>

<form id="new-contact" class="hide">
  <label for="new-first-name">First Name:</label> <br />
  <input name="first_name" id="new-first-name" type="text">
  <br />
  <label for="new-last-name">Last Name:</label> <br />
  <input name="last_name" id="new-last-name" type="text">
  <br />
  <label for="new-email">Email:</label> <br />
  <input name="email" id="new-email" type="email">
  <br />
  <input type="submit" value="Submit">
</form>